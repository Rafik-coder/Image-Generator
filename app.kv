
MDScreen:
        
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Imagries"
            right_action_items: [["dots-vertical", lambda x: app.callback()]]


        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 0
            size_hint: 1, 1

            MDGridLayout:
                size_hint_y: None
                height: self.minimum_height
                width: self.minimum_width
                cols: 1
                rows: 3
                padding: ('18dp', '18dp', '18dp', '18dp')
                spacing: '20dp'

                # MDBoxLayout:
                #     size_hint: .7,None
                #     pos_hint_x: {'center_x': 0.5}
                #     height: dp(200)
                    # md_bg_color: 0, 0, 0, 1

                # MDGridLayout:
                #     cols: 1
                #     rows: 1
                #     size_hint: 1, 1
                MDCard:
                    size_hint: .7, None
                    height: dp(260)
                    pos_hint: {"center_x": .5, "center_y": .5}
                    elevation: 3
                    shadow_softness: 12
                    # shadow_offset: (-2, 2)
                    padding: ('10dp', '10dp', '10dp', '10dp')

                    MDGridLayout:
                        cols: 1
                        rows: 3

                        MDGridLayout:
                            cols: 2
                            rows: 1
                            size_hint: 1, .2
                            # md_bg_color: 0, .5, 0, 1

                            MDBoxLayout:
                                size_hint: .8, 1

                            MDIconButton:
                                icon: "dots-vertical"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                on_release: app.note()

                        MDGridLayout:
                            rows: 1
                            cols: 1
                            padding: ('8dp', '15dp', '15dp', '8dp')
                            size_hint: 1, .5

                            TextInput:
                                id: promt
                                hint_text: "Describe your image"
                                required: True
                                multiline: True
                                mode: "rectangle"
                            
                        MDRaisedButton:
                            text: "GENERATE"
                            size_hint: 1, .1

                            on_release: app.generate()


                MDCard:
                    size_hint: .7, None
                    height: dp(300)
                    pos_hint: {"center_x": .5, "center_y": .5}
                    elevation: 3
                    shadow_softness: 12
                    # shadow_offset: (-2, 2)
                    padding: ('10dp', '10dp', '10dp', '10dp')
                    
                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint: 1, 1

                        MDLabel:
                            text: "Generated Images..."
                            size_hint: 1, .3


                        ScrollView:
                            do_scroll_x: True
                            do_scroll_y: False
                            bar_width: 0
